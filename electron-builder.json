{
    "appId": "com.dcrubro.hardwallex",
    "productName": "HardWallex",
    "directories": {
      "output": "build"
    },
    "files": [
        "dist/**",
        "node_modules/**/*",
        "html/**",
        "exports/",
        "wallets/",
        "css/**"
    ],
    "asar": false,
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "linux": {
      "icon": "icons/"
    }
}
  